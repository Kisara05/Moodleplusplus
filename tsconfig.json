{
  "compilerOptions": {
    // Các tính năng JS
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "target": "ES2022",

    // Modules
    "module": "ES2022",
    "moduleResolution": "Bundler", // Rất quan trọng cho Vite
    "esModuleInterop": true,
    "isolatedModules": true, // Bắt buộc cho Vite

    // React
    "jsx": "react-jsx",

    // Path Aliases (Quan trọng)
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },

    // Chất lượng code
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    // Đầu ra
    "noEmit": true // Vite/Remix sẽ build, không phải 'tsc'
  },
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
