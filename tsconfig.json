{
  "compilerOptions": {
    // Các tính năng JS
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "target": "ES2022",
    // Modules
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "isolatedModules": true,
    // React
    "jsx": "react-jsx",
    // Path Aliases
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    // Kiểm tra code
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    // Đầu ra
    "noEmit": true
  },
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
